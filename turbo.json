{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "apps/**/dist/**"
      ]
    },
    "lint": {
      "cache": true
    },
    "format": {
      "cache": true
    },
    "check": {
      "cache": true
    }
  }
}
